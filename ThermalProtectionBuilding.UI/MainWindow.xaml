<Window
    x:Class="ThermalProtectionBuilding.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ThermalProtectionBuilding.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Button
                Margin="10"
                Click="Button_Click_SetDemoDat"
                Content="Установить демонстрационные данные"
                FontSize="20"
                FontWeight="Bold" />
            <Button
                Margin="10"
                Click="Button_Click_CalculateThickness"
                Content="Рассчитать толщину"
                FontSize="20"
                FontWeight="Bold" />
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold">
                <Run Text="Толщина = " />
                <Run x:Name="__runTextBlock_thicknessCalculation" Text="--" />
                <Run Text="мм" />
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
